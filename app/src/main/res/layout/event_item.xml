<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventDetailsLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/calendarView"
    android:background="@drawable/contact_box"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eventTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="start" />

<!--            <ImageButton-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="12dp"-->
<!--                android:src="@drawable/delete_24px"-->
<!--                android:background="@null" />-->
        </LinearLayout>

        <TextView
            android:id="@+id/eventContentsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="start"
            android:paddingTop="8dp"
            android:ellipsize="end"
            android:maxLines="2" />

        <TextView
            android:id="@+id/eventTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@drawable/time_background"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="start"
            android:layout_marginTop="6dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/favoriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end | center_vertical"
        android:src="@drawable/favorite_24px"
        android:background="@null"
        android:layout_marginHorizontal="12dp"/>

</LinearLayout>